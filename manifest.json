{
    "manifest_version": 2,
    "name": "GeniuSpot",
    "author": "Noah Sandman",
    "description": "Use Spotify miniplayer on genius.com instead of Apple Music",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": [
                "https://*.genius.com/*"
            ],
            "js": [
                "genius-inject.js"
            ],
            "exclude_matches": [
                "https://*.genius.com/artists/*",
                "https://*.genius.com/albums/*",
                "https://*.genius.com/search",
                "https://*.genius.com/"
            ]
        }
    ],
    "background": {
        "scripts": [
            "key-manager.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ]
}